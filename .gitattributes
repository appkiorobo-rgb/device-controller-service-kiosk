# Auto detect text files and perform LF normalization
* text=auto

# Source code files - use LF
*.cpp text eol=lf
*.h text eol=lf
*.hpp text eol=lf
*.c text eol=lf
*.cc text eol=lf
*.cxx text eol=lf

# Configuration files - use LF
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf

# Documentation - use LF
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Scripts - use LF
*.sh text eol=lf
*.bat text eol=crlf
*.ps1 text eol=crlf
*.cmd text eol=crlf

# Build files - use LF
CMakeLists.txt text eol=lf
*.cmake text eol=lf
Makefile text eol=lf

# Binary files
*.exe binary
*.dll binary
*.lib binary
*.obj binary
*.pdb binary
*.ilk binary
*.exp binary
*.so binary
*.dylib binary
*.a binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text eol=lf

# Archives
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.rar binary
